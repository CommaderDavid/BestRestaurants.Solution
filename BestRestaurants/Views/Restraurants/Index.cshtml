@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants have been added yet!</h3>
} 

@foreach (Restaurant item in Model)
{
  <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.RestaurantId }) | @item.Cuisine.CuisineName</li>
}

<p>@Html.ActionLink("Add new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>