@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisines have been added yet!</h3>
}

@foreach (Cuisine item in Model)
{
  <li>@Html.ActionLink($"{item.CuisineName}", "Details", new { id = item.CuisineId })</li>
}

<p>@Html.ActionLink("Add new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>